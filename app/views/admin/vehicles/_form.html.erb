<div class="box box-primary">

  <!-- form start -->
  <%= form_with(model: [:admin, vehicle], local: true) do |form| %>

      <% if vehicle.errors.any? %>
          <div class="alert alert-danger alert-dismissible">
            <h4><%= pluralize(vehicle.errors.count, 'error') %> prohibited this vehicle from being saved:</h4>

            <ul>
              <% vehicle.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


    <div class="box-body">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :vehicle_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :registration_number %>
        <%= form.text_field :registration_number, id: :vehicle_registration_number, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :make %>
        <%= form.text_field :make, id: :vehicle_make, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :model %>
        <%= form.text_field :model, id: :vehicle_model, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :year %>
        <%= form.text_field :year, id: :vehicle_year, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :colour %>
        <%= form.text_field :colour, id: :vehicle_colour, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :details %>
        <%= form.text_area :details, id: :vehicle_details, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :image, class: 'form-control' %>
        <% if @vehicle.image %>
          <%= link_to image_tag(@vehicle.image[:thumb]), @vehicle.image[:original] %>
        <% end %>
      </div>
    </div>

    <div class="box-footer">
      <%= link_to 'Back', admin_vehicles_path, class:'btn btn-default' %>
      <%= form.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
