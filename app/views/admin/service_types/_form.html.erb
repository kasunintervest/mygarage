<div class="box box-primary">

  <!-- form start -->
  <%= form_with(model: [:admin, service_type], local: true) do |form| %>

      <% if service_type.errors.any? %>
          <div class="alert alert-danger alert-dismissible">
            <h4><%= pluralize(service_type.errors.count, 'error') %> prohibited this service type from being saved:</h4>

            <ul>
              <% service_type.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


    <div class="box-body">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :service_type_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, id: :service_type_description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.check_box :publish, id: :service_type_publish, class: 'form-control' %>
        <%= form.label :publish %>
      </div>
    </div>

    <div class="box-footer">
      <%= link_to 'Back', admin_service_types_path, class:'btn btn-default' %>
      <%= form.submit 'Save', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
