<p id="notice"><%= notice %></p>

<h1>Service Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_companies.each do |service_company| %>
      <tr>
        <td><%= service_company.name %></td>
        <td><%= service_company.description %></td>
        <td><%= link_to 'Show', admin_service_company_path(service_company) %></td>
        <td><%= link_to 'Edit', edit_admin_service_company_path(service_company) %></td>
        <td><%= link_to 'Destroy', admin_service_company_path(service_company), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

