<div class="wrapper">

  <%= render 'admin/partials/header' %>

  <%= render 'admin/partials/sidebar' %>

  <div style="min-height: 900px" class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Service Companies</h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <%= render 'admin/partials/notices' %>

      <div class="row">
        <div class="col-xs-12">
          <div class="box box-primary">
            <div class="box-header">
              <h3 class="box-title"></h3>

              <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">

                  <div class="input-group-btn">
                    <%= link_to new_admin_service_company_path, class: 'btn btn-default' do %>
                        <i class="fa fa-plus"></i> New Service Company
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Address</th>
                  <th>Phone</th>
                  <th>Publish</th>
                  <th class="text-center">Action</th>
                </tr>
                <% @service_companies.each do |service_company| %>
                  <tr>
                    <td><%= service_company.id %></td>
                    <td><%= link_to service_company.name, edit_admin_service_company_path(service_company) %></td>
                    <td><%= service_company.address %></td>
                    <td><%= service_company.phone %></td>
                    <td><%= service_company.publish %></td>
                    <td class="text-center">
                      <%= link_to edit_admin_service_company_path(service_company), class: 'btn btn-sm' do %>
                          <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to admin_service_company_path(service_company), class: 'btn btn-sm', method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="fa fa-remove"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>

              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%= render 'admin/partials/footer' %>

</div>
<!-- ./wrapper -->
