<div class="wrapper">

  <%= render 'admin/partials/header' %>

  <%= render 'admin/partials/sidebar' %>

  <div style="min-height: 900px" class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Users</h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <%= render 'admin/partials/notices' %>

      <div class="row">
        <div class="col-xs-12">
          <div class="box box-primary">
            <div class="box-header">
              <h3 class="box-title"></h3>

              <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">

                  <div class="input-group-btn">
                    <%= link_to new_admin_user_path, class: 'btn btn-default' do %>
                        <i class="fa fa-plus"></i> New User
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tr>
                  <th>ID</th>
                  <th>Email</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Role</th>
                  <th>Last Sign In At</th>
                  <th class="text-center">Action</th>
                </tr>
                <% if @users.each do |user| %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= link_to user.email, edit_admin_user_path(user) %></td>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.roles.first.name if user.roles.first %></td>
                    <td><%= user.current_sign_in_at %></td>
                    <td class="text-center">
                      <%= link_to edit_admin_user_path(user), class: 'btn btn-sm' do %>
                          <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to admin_user_path(user), class: 'btn btn-sm', method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="fa fa-remove"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end.empty? %>
                    <tr><td colspan="5">No records.</td></tr>
                <% end %>

              </table>
            </div>
            <!-- /.box-body -->

            <div class="pull-right">
              <%= will_paginate @users %>
            </div>

          </div>
          <!-- /.box -->
        </div>
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%= render 'admin/partials/footer' %>

</div>
<!-- ./wrapper -->
